<div class="col-sm-6 content-left">
  <div class="row friend-wrapper">
    <div class="col-xs-6 col-sm-6 col-md-3">
      <a href="#"><%= image_tag("icon_photo_small.png", class: "friend-img") %></a>
    </div>
    <div class="col-xs-6 col-sm-6 col-md-4 friend-name-wrapper">
      <p><%= link_to "#{user.full_name}", user_profile_path(user, user.profile) %></p>
      <p><%= pluralize(user.friended_users.count, "friend") %></p>
    </div>
    <div class="col-md-5">
      <% if user == current_user || current_user.friended_user_ids.include?(user.id) %>
        <%= button_to "Unfriend", friending_path(user.id, :current_user_id => current_user.id), :method => :delete %>
      <% elsif signed_in_user? %>
        <%= button_to "Friend", {controller: 'friendings', action: 'create', id: user.id } %>
      <% end %>
    </div>
  </div><!-- Friend Wrapper -->
</div>

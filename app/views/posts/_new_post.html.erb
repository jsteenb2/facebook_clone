<section class="row section-container">
  <div class="col-sm-12 section-header">
    <div class="row">
      <div class="col-sm-6">
        <h4><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Status</h4>
      </div>
    </div>
  </div>
  <%= form_tag posts_path, method: "post" do |f| %>
    <div class="col-xs-12">
      <div class="new-post pull-left">
        <%= image_tag(profile_pic_url(user), class: "post-pic") %>
      </div>
      <div class="col-xs-10 section-container text-center">
        <%= text_area_tag("post[description]", post.description, class: "btn-block", placeholder: "Tell the world something...", rows: "2") %>
      </div>
    </div>
    <div class="col-sm-12 section-header post-block">
      <div class="row">
        <div class="col-sm-3 col-sm-offset-8">
          <%= submit_tag("Post", class: "btn btn-primary btn-block") %>
        </div>
      </div>
    </div>
  <% end %>
</section><!-- New Post section -->
